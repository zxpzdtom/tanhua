{
  "expo": {
    "name": "tanhua",
    "slug": "tanhua",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "需要访问您的位置以提供更好的服务"
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "使用相机拍摄头像",
        "NSPhotoLibraryUsageDescription": "访问相册选择头像",
        "NSLocationWhenInUseUsageDescription": "需要访问您的位置以提供更好的服务",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "INTERNET",
        "ACCESS_COARSE_LOCATION",
        "http://p4ho3bab.dongtaiyuming.net"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
